{
	"name": "hvl-expo-backend",
	"description": "Backend server for the HVL EXPO app",
	"version": "0.1.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/hvlexpo/hvlexpo"
	},
	"private": true,
	"dependencies": {
		"dotenv": "^7.0.0",
		"express": "^4.16.4",
		"firebase": "^5.9.0",
		"helmet": "^3.16.0",
		"jsonwebtoken": "^8.5.0",
		"mongoose": "^5.4.19",
		"morgan": "^1.9.1",
		"parse-error": "^0.2.0",
		"passport": "^0.4.0",
		"passport-firebase-auth": "0.0.0-beta.1",
		"passport-jwt": "^4.0.0",
		"pg": "^7.8.2"
	},
	"devDependencies": {
		"ava": "^1.3.1",
		"concurrently": "^4.1.0",
		"eslint": "^5.15.1",
		"nodemon": "^1.18.10",
		"now": "^14.1.0",
		"nyc": "^13.3.0",
		"rimraf": "^2.6.3"
	},
	"scripts": {
		"start": "node index.js",
		"server": "nodemon",
		"server:frontend": "npm run start --prefix ../frontend",
		"dev": "concurrently \"npm run server\" \"npm run server:frontend\"",
		"test": "ava",
		"lint": "eslint",
		"coverage": "nyc --reporter=lcov --reporter=text-lcov npm test",
		"build:react": "rimraf build && cd ../frontend && npm run yank",
		"deploy:now": "now",
		"deploy:now:alias": "now && now alias"
	},
	"engines": {
		"node": "^10"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	]
}
